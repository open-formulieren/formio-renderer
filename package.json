{
  "name": "@open-formulieren/formio-renderer",
  "version": "0.1.0",
  "description": "Alternative Form.io renderer made for Open Forms.",
  "main": "./lib/esm/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "default": "./lib/esm/index.js"
    },
    "./esm/": "./lib/esm/",
    "./lib/": "./lib/"
  },
  "scripts": {
    "build:esm": "tsc -p tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
    "build:storybook": "build-storybook --webpack-stats-json",
    "build": "npm-run-all build:*",
    "test": "npm-run-all test:*",
    "test:storybook": "test-storybook",
    "format": "prettier --write 'src/**/*'",
    "checkformat": "prettier --check 'src/**/*'",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006",
    "watch": "tsc -p tsconfig.prod.json --watch"
  },
  "files": [
    "lib/",
    "i18n"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/open-formulieren/formio-renderer.git"
