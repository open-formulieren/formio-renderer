    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-formio": "^4.3.0",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^4.9.5"
