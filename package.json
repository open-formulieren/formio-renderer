  "peerDependencies": {
    "formiojs": "~4.13.0 || ~4.14.0",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@open-formulieren/types": "^0.9.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
